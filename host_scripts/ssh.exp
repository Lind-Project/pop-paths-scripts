#!/usr/bin/expect

# logging into ssh

# set index [lindex $argv 0];
set index 1;

spawn bash ssh_command.sh $index
expect {
    "yes/no" {
        send "yes\r"
        expect "*?assword" {
            send "password\r"
        }
    } 
    
    "*?assword" {
        send "password\r"
    }

    "127.0.0.1" {
        send "sudo ./ssh.exp $index"
    }
    
    "*?onnection refused" {
        spawn "sudo ./ssh.exp $index"
    }
}